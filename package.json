{
  "name": "tdraw-tools-monorepo",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "bun run build:packages && bun run build:apps",
    "build:packages": "bun run --filter '@tdraw-tools/*' build",
    "build:apps": "bun run --filter playground build",
    "check": "bun run typecheck && bun run test",
    "typecheck": "bunx tsc -b",
    "test": "bun run --filter '@tdraw-tools/core' test",
    "lint": "bunx eslint .",
    "format": "bunx prettier --write .",
    "dev:playground": "bun run --filter playground dev"
  },
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "@types/node": "^22.13.5",
    "@typescript-eslint/eslint-plugin": "^8.24.0",
    "@typescript-eslint/parser": "^8.24.0",
    "eslint": "^9.20.1",
    "prettier": "^3.5.1",
    "typescript": "^5.8.2",
    "vitest": "^2.1.8"
  }
}
